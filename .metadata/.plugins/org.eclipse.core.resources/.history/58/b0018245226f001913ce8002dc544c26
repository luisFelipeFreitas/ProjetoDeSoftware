package dao;

import java.util.List;

import modelo.Frota;
import excecao.ObjetoNaoEncontradoException;

public interface FrotaDAO {
    long inclui(Frota umaFrota);

    void altera(Frota umaFrota) throws ObjetoNaoEncontradoException;

    void exclui(long id) throws ObjetoNaoEncontradoException;

    Frota recuperaUmaFrota(long numero) throws ObjetoNaoEncontradoException;

    Frota recuperaUmaFrotaComLock(long numero) throws ObjetoNaoEncontradoException;

    Frota recuperaUmaFrotaERotas(long numero) throws ObjetoNaoEncontradoException;

    List<Frota> recuperaFrotasERotas();
}