package dao;

import java.util.List;

import modelo.Personagem;
import excecao.ObjetoNaoEncontradoException;

public interface RotaDAO {
    long inclui(Personagem umaRota);

    void altera(Personagem umaRota) throws ObjetoNaoEncontradoException;

    void exclui(long id) throws ObjetoNaoEncontradoException;

    Personagem recuperaUmaRota(long numero) throws ObjetoNaoEncontradoException;

    Personagem recuperaUmaRotaComLock(long numero) throws ObjetoNaoEncontradoException;

    Personagem recuperaUmaRotaEParadas(long numero) throws ObjetoNaoEncontradoException;

    List<Personagem> recuperaRotasEParadas();
}