package dao;

import java.util.List;

import modelo.Jogador;
import excecao.ObjetoNaoEncontradoException;

public interface JogadorDAO {
    long inclui(Jogador umaFrota);

    void altera(Jogador umaFrota) throws ObjetoNaoEncontradoException;

    void exclui(long id) throws ObjetoNaoEncontradoException;

    Jogador recuperaUmaFrota(long numero) throws ObjetoNaoEncontradoException;

    Jogador recuperaUmaFrotaComLock(long numero) throws ObjetoNaoEncontradoException;

    Jogador recuperaUmaFrotaERotas(long numero) throws ObjetoNaoEncontradoException;

    List<Jogador> recuperaFrotasERotas();
}