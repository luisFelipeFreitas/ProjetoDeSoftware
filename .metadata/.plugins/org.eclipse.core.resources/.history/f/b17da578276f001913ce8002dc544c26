package dao;

import java.util.List;

import modelo.Rota;
import excecao.ObjetoNaoEncontradoException;

public interface RotaDAO {
    long inclui(Rota umaRota);

    void altera(Rota umaRota) throws ObjetoNaoEncontradoException;

    void exclui(long id) throws ObjetoNaoEncontradoException;

    Rota recuperaUmaRota(long numero) throws ObjetoNaoEncontradoException;

    Rota recuperaUmaRotaComLock(long numero) throws ObjetoNaoEncontradoException;

    Rota recuperaUmaRotaEParadas(long numero) throws ObjetoNaoEncontradoException;

    List<Rota> recuperaRotasEParadas();
}